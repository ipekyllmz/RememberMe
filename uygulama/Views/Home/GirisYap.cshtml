@model uygulama.Models.Entity.uye
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Giriş Yap</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/girisyap.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=PT+Sans+Narrow:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Damion&display=swap" rel="stylesheet">

</head>
<body>

    <div class="container">
        <h3 class="container-h3">
            RememberMe
        </h3>
        <div>
            @ViewBag.LoginError
        </div>
        <br /> <br />
        @if (Session["login"] == null)
        {
            <form id="form" name="form">

                <div class="form-group">
                    <label for="exampleInputKullaniciAdi" class="text-light">Kullanıcı Adı</label>
                    <input type="text" class="form-control" id="exampleInputKullaniciAdi">
                    @*<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>*@
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1" class="text-light">Şifre</label>
                    <input type="password" class="form-control" id="exampleInputPassword1">
                </div>
                <div class="form-group form-check">
                    <input type="radio" class="form-check-input" name="radiobuton" id="exampleCheck1" >
                    <label class="form-check-label text-light" for="exampleCheck1">Beni Hatırla</label>
                </div>

               
            <button class="buton">Giriş Yap </button>
              

                <p> <a href="#" class="text-light">Şifremi Unuttum</a></p>
                <p> <a href="/Uye/UyeOl" class="text-light" style="text-decoration-line:underline;">Üye olmak için Tıklayın..</a></p>
            </form>
        }



    </div>

    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/girisyap.js"></script>
</body>
</html>
